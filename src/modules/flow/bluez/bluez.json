{
  "$schema": "http://solettaproject.github.io/soletta/schemas/node-type-genspec.schema",
  "name": "bluez",
  "meta": {
    "author": "Intel Corporation",
    "license": "BSD 3-Clause",
    "version": "1"
  },
  "types": [
    {
      "category": "input/hw",
      "description": "Retrieves live measurements from an already paired Parrot Flower Power.",
      "methods": {
        "close": "flower_power_sensor_close",
        "open": "flower_power_sensor_open"
      },
      "name": "bluez/flower-power-sensor",
      "options": {
        "members": [
          {
            "name": "address",
            "data_type": "string",
            "description": "Bluetooth Address"
          }
        ],
        "version": 1
      },
      "out_ports": [
        {
          "data_type": "custom:PACKET_TYPE_FLOWER_POWER",
          "description": "FIXME",
          "name": "OUT"
        }
      ],
      "in_ports": [
        {
          "data_type": "boolean",
          "description": "FIXME",
          "name": "IN",
          "methods": {
            "process": "flower_power_led_in_process"
          }
        }
      ],
      "private_data_type": "flower_power_data",
      "url": "http://solettaproject.org/doc/latest/node_types/bluez/flower-power-sensor.html"
    },
    {
      "category": "input/hw",
      "description": "Bluetooth Simple Pairer, pairs with the nearest device",
      "methods": {
        "close": "simple_pair_close",
        "open": "simple_pair_open"
      },
      "name": "bluez/simple-pair",
      "options": {
        "members": [
          {
            "name": "timeout",
            "data_type": "int",
            "description": "How long to wait before trying to pair with the nearest device"
          }
        ],
        "version": 1
      },
      "out_ports": [
        {
          "data_type": "string",
          "description": "Address of the paired devices",
          "name": "OUT"
        }
      ],
      "in_ports": [
        {
          "data_type": "boolean",
          "description": "While True keeps looking for the nearest device",
          "name": "ENABLE",
          "methods": {
            "process": "simple_pair_enable_process"
          }
        }
      ],
      "private_data_type": "simple_pair_data",
      "url": "http://solettaproject.org/doc/latest/node_types/bluez/bluez-simple-pair.html"
    }
  ]
}
